{
  "name": "curvepoint",
  "version": "1.0.2",
  "type": "module",
  "description": "CurvePoint: A secure and flexible group messaging solution for blockchain applications.",
  "main": "dist/cjs/mod.js",
  "module": "dist/esm/mod.js",
  "types": "dist/types/mod.d.ts",
  "files": [
    "dist",
    "src",
    "docs",
    "mod.ts",
    "LICENSE.txt"
  ],
  "exports": {
    ".": {
      "types": "./dist/types/mod.d.ts",
      "import": "./dist/esm/mod.js",
      "require": "./dist/cjs/mod.js"
    }
  },
  "scripts": {
    "test": "npm run build && jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "ts-standard --fix src/**/*.ts",
    "build": "tsc -b",
    "dev": "tsc -b -w",
    "prepublish": "npm run build",
    "doc": "ts2md --inputFilename=mod.ts --outputFilename=API.md --filenameSubstring=API --firstHeadingLevel=1",
    "lint:fix": "eslint --fix src/**/*.ts",
    "generate-docs": "ts2md src/*.ts --out README.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/p2ppsr/curvepoint.git"
  },
  "keywords": [
    "Blockchain",
    "ECDH",
    "Group Messaging",
    "Secure Communication",
    "BSV"
  ],
  "author": "P2PPSR, LLC",
  "license": "SEE LICENSE IN LICENSE.txt",
  "bugs": {
    "url": "https://github.com/p2ppsr/curvepoint/issues"
  },
  "homepage": "https://github.com/p2ppsr/curvepoint#readme",
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@types/jest": "^29.5.14",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.2",
    "globals": "^15.13.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "ts-standard": "^12.0.2",
    "ts2md": "^0.2.4",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.17.0"
  },
  "dependencies": {
    "@bsv/sdk": "^1.7.6"
  }
}
